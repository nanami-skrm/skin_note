<div class="container">
  <h4>新規会員登録</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザ名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :年齢 %><br />
      <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
    </div>

    <div class="field">
      <%= f.label :肌質 %><br />
      <%= f.select :skin_type, User.skin_types.keys, autofocus: true, autocomplete: "skin_type" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワードの確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions" >
      <%= f.submit "登録する", class: "btn btn-primary", style: "width:180px" %>
    </div>
  <% end %>

  <div>
    <%= link_to "会員登録がお済の方はこちら", new_user_session_path %>
    <%#= render "devise/users/shared/links" %>
  </div>

</div>
