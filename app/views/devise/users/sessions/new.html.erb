<div class="container" data-turbolinks="false">
  <h4>ログイン</h4>

  <% if flash[:alert] != nil %>
    <div id="error_explanation" class="alert alert-danger">
      <%= content_tag :div, flash[:alert], :id => "flash_alert" if flash[:alert].is_a?(String) %>
    </div>
  <% elsif flash[:notice] != nil %>
    <%# do nothing (flash[:notice] contained ex: logout message. )%>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログインする", class: "btn btn-primary", style: "width:180px" %>
    </div>
  <% end %>
  <div>
    <%= link_to "新規会員登録はこちら", new_user_registration_path %>
  </div>
  <%#= render "devise/users/shared/links" %>
</div>