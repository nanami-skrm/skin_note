<div class="container">
  <div class="row">
    <h4>つぶやき詳細</h4>
    <div class="tweet-text">
      <%= @tweet.tweet_text %>
      (<%= @tweet.user.age %>歳/<%= @tweet.user.skin_type %>)
    </div>
  </div>

  <div class="row">

    <div class="col-xs-12 comment-table">
      <table class="table table-hover" style="table-layout:fixed;width:100%;">

          <colgroup>
              <col style="width:5%;">
              <col style="width:60%;">
              <col style="width:20%;">
              <col style="width:15%;">
          </colgroup>

        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @tweet.comments.each_with_index do |comment, index| %>
            <tr>
              <td>
                <%= index += 1 %>
              </td>
              <td style="word-wrap:break-word;">
                <%= comment.comment_text %>
              </td>
              <td>
                (<%= comment.user.age %>歳/<%= comment.user.skin_type %>)
              </td>
              <td>
                  <%= link_to "削除", admin_tweet_comment_path(@tweet, comment), method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>