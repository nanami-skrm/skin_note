<div class="container">
  <div class="row">
    <%= render "layouts/main_button" %>
  </div>

  <h3>情報登録変更</h3>

  <%= form_with :model => @user, url:user_user_path, method: :patch, local: true, class:"form-horizontal" do |f| %>

    <div class="row">
      <p>名前</p>
      <%= f.text_field :name, class: "col-xs-4" %>
    </div>

    <div class="row">
      <P>アイコン画像</P>
      <%= attachment_image_tag(@user, :image, :fill, 50, 50, fallback: "no_image.jpg") %>
      <%= f.attachment_field :image, class: "col-xs-4" %>
    </div>

    <div class="row">
      <p>年齢</p>
      <%= f.text_field :age, class: "col-xs-4" %>
    </div>

    <div class="row">
      <p>肌質</p>
      <%= f.select :skin_type, User.skin_types.keys, autofocus: true, autocomplete: "skin_type", class: "col-xs-4" %>
    </div>

    <div class="row">
      <%= f.submit "変更する", class: "col-xs-4 btn btn-primary" %>
    </div>

  <% end %>

</div>